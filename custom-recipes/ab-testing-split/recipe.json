{
    "meta": {
        "label": "AB testing split",
        "description": "Split a list of users into a A group and a B group.",
        "icon": "icon-beaker"
    },
    "selectableFromDataset": "user_list",
    "selectableFromFolder": "folder",

    "kind": "PYTHON",

    "inputRoles": [
        {
            "name": "user_list",
            "label": "Dataset with the reference of the users involved in the experiment ",
            "description": "Dataframe containing the ids, the emails of the users in the experiment",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true
        },
        {
            "name": "folder",
            "label": "Folder",
            "description": "Folder containing the parameters",
            "arity": "UNARY",
            "required": false,
            "acceptsDataset": false,
            "acceptsManagedFolder": true
        }
    ],
    "outputRoles": [
        {
            "name": "groups",
            "label": "Experiment dataset",
            "description": "Input dataset with an extra column containing the group",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true
        },
        {
            "name": "A_group",
            "label": "A group (optional)",
            "description": "Dataset containing the users who are part of the group A",
            "arity": "UNARY",
            "required": false,
            "acceptsDataset": true
        },
        {
            "name": "B_group",
            "label": "B group (optional)",
            "description": "Dataset containing the users who are part of the group B",
            "arity": "UNARY",
            "required": false,
            "acceptsDataset": true
        }
    ],
    "paramsPythonSetup": "py/compute_files_in_folder.py",
    "params": [
        {
            "name": "user_reference",
            "type": "COLUMN",
            "label": "User reference",
            "description": "Column containing user reference (user Id , email...). Each user should have a unique reference.",
            "columnRole": "user_list"
        },
        {
            "type": "SELECT",
            "name": "sample_size_definition",
            "label": "Sample size definition",
            "selectChoices": [
                {
                    "value": "web_app",
                    "label": "Retrieve values from web app"
                },
                {
                    "value": "manual",
                    "label": "Edit sample sizes manually "
                }
            ],
            "defaultValue": "web_app",
            "visibilityCondition": true
        },
        {
            "name": "parameters",
            "label" : "Parameters (computed in the web app)",
            "type": "SELECT",
            "getChoicesFromPython": true,
            "description": "Name of the JSON file",
            "mandatory" : false,
            "visibilityCondition": "model.sample_size_definition == 'web_app'"
        },
        {
            "type": "INT",
            "name": "n_A",
            "label": "Sample size for variation A",
            "description": "Minimul sample size for the A group",
            "parameterSetId": "n_A",
            "visibilityCondition": "model.sample_size_definition == 'manual'"
        },
        {
            "type": "INT",
            "name": "n_B",
            "label": "Sample size for variation B",
            "description": "Minimul sample size for the B group",
            "parameterSetId": "n_B",
            "visibilityCondition": "model.sample_size_definition == 'manual'"
        },
        {
            "type": "STRING",
            "name": "end",
            "label": "End date (UTC midnight)",
            "description": "Format dd/MM/YYYY",
            "parameterSetId": "end-date",
            "visibilityCondition": "model.date_manager == 'timerange'"
        },
        {
            "type": "SELECT",
            "name": "attribution_method",
            "label": "Attribution for leftover users",
            "selectChoices": [
                {
                    "value": "leftover_to_A",
                    "label": "Group A"
                },
                {
                    "value": "leftover_to_B",
                    "label": "Group B"
                },
                {
                    "value": "leftover_blank",
                    "label": "Leave blank"
                }
            ],
            "defaultValue": "leftover_to_A",
            "visibilityCondition": true
        }
    ],
    "resourceKeys": []
}